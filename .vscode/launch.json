{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Astro Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "args": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}/frontend",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch Chrome (Astro)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}/frontend/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:////root/code/bkmk-exp/*": "${webRoot}/*",
        "*": "${webRoot}/*"
      },
      "resolveSourceMapLocations": [
        "${webRoot}/**/*",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Python: FastAPI",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "python": "${workspaceFolder}/.venv/bin/python",
      "cwd": "${workspaceFolder}/backend",
      "args": [
        "main:app",
        "--reload",
        "--host",
        "127.0.0.1",
        "--port",
        "8000"
      ],
      "jinja": true,
      "console": "integratedTerminal"
    }
  ],
  "compounds": [
    {
      "name": "Astro Full Debug",
      "configurations": [
        "Astro Dev Server",
        "Launch Chrome (Astro)"
      ]
    },
    {
      "name": "Full Debug",
      "configurations": [
        "Astro Dev Server",
        "Launch Chrome (Astro)",
        "Python: FastAPI"
      ]
    }
  ]
}
