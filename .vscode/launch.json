{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Astro Dev Server",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "bun",
      "args": [
        "run",
        "dev"
      ],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "name": "Launch Chrome (Astro)",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:4321",
      "webRoot": "${workspaceFolder}/src",
      "sourceMaps": true,
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*",
        "webpack:////root/code/bkmk-exp/*": "${webRoot}/*",
        "*": "${webRoot}/*"
      },
      "resolveSourceMapLocations": [
        "${webRoot}/**/*",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/backend/main.py",
      "cwd": "${workspaceFolder}/backend",
      "console": "integratedTerminal",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/backend"
      },
      "justMyCode": true
    }
  ],
  "compounds": [
    {
      "name": "Astro Full Debug",
      "configurations": [
        "Astro Dev Server",
        "Launch Chrome (Astro)"
      ]
    },
    {
      "name": "Full Debug",
      "configurations": [
        "Astro Dev Server",
        "Launch Chrome (Astro)",
        "Backend"
      ]
    }
  ]
}
